<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        <tr>
            <th>Public</th>
            <td>
                {% if item.public %}Yes{% else %}No{% endif %}
            </td>
        </tr>
        <tr>
            <th>Original Name</th>
            <td>
                {{ item.originalName }}
            </td>
        </tr>
        <tr>
            <th>Path</th>
            <td>
                {{ item.path }}
            </td>
        </tr>
        <tr>
            <th>Mime Type</th>
            <td>
                {{ item.mimeType }}
            </td>
        </tr>
        <tr>
            <th>File Size</th>
            <td>
                {{ item.fileSize }}
            </td>
        </tr>
        <tr>
            <th>Thumb Path</th>
            <td>
                {{ item.thumbPath }}
            </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                {{ item.description|raw }}
            </td>
        </tr>
        <tr>
            <th>License</th>
            <td>
                {{ item.license|raw }}
            </td>
        </tr>

        <tr>
            <th>Scrapbook</th>
            <td>
                {% if item.scrapbook %}
                    <a href='{{ path("scrapbook_show", {"id": item.scrapbook.id}) }}'>{{ item.scrapbook }}</a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ item.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ item.updated|date }}</td>
        </tr>
    </tbody>
</table>


