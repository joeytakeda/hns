{% extends 'base.html.twig' %}

{% block title %}Document Details {% endblock %}

 {% block pageheader %}
     <h1>Document Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('document_edit', {'id': document.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('document_delete', {'id': document.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ document.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% embed 'document/partial/detail.html.twig' %}
    {% endembed %}

    <h2>Document PDFs</h2>
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('document_new_pdf', {'id': document.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Add Pdf </a>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}
    {% embed '@NinesMedia/pdf/partial/list.html.twig' with {
        'pdfs': document.pdfs,
        'path_delete': 'document_delete_pdf',
        'path_edit': 'document_edit_pdf',
        'entity_id': document.id,
    } %}
    {% endembed %}

    <h2>Document Images</h2>
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('document_new_image', {'id': document.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Add Image </a>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}
    {% embed '@NinesMedia/image/partial/list.html.twig' with {
        'images': document.images,
        'path_delete': 'document_delete_image',
        'path_edit': 'document_edit_image',
        'entity_id': document.id,
    } %}
    {% endembed %}

    <h2>Document Links</h2>
    {% embed '@NinesMedia/link/partial/list.html.twig' with {
        'entity': document,
    } %}
    {% endembed %}

{% endblock %}
