<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
        </tr>
    </thead>
    <tbody>
        {% for document in documents %}
            <tr>
                <td>
                    <a href="{{ path('document_show', { 'id': document.id }) }}">
                        {{ document.id }}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
